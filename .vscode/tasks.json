{
  "version": "2.0.0",
  "tasks": [
    {
      "isBuildCommand": true,
      "taskName": "Compile",
      "command": "make",
      "isShellCommand": true,
      "showOutput": "always"
    },
    {
      "taskName": "Flash program on device",
      "command": "st-flash",
      "isShellCommand": true,
      "dependsOn": "Compile",
      "args": [
        "--format",
        "ihex",
        "write",
        "./build/program.hex"
      ]
    },
    {
      "isBuildCommand": true,
      "taskName": "Clean build files",
      "command": "make",
      "args": [
        "clean"
      ],
      "isShellCommand": true,
      "showOutput": "always"
    },
    {
      "taskName": "Launch GDB server",
      "isBackground": true,
      "command": "st-util",
      "dependsOn": ["Flash program on device"]
    },
    {
      "taskName": "Erase program on device",
      "command": "st-flash",
      "isShellCommand": true,
      "args": [
        "erase"
      ]
    }
  ]
}
